<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pdai.javafx.app.controller.ForumController">
    <VBox prefHeight="600.0" prefWidth="800.0">
        <ScrollPane fitToWidth="true" prefHeight="500.0" prefWidth="800.0">
            <VBox fx:id="messageContainer" prefHeight="500.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #eeeeee;" />
        </ScrollPane>
        <HBox prefHeight="100.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #dddddd;">
            <TextArea fx:id="messageInput" prefHeight="70.0" prefWidth="700.0" promptText="Type your message here..." AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0" />
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" prefHeight="70.0" prefWidth="100.0" text="Send" AnchorPane.bottomAnchor="15.0" />
        </HBox>
    </VBox>
</AnchorPane>
